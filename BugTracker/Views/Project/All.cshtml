@model BugTracker.Models.ServiceModels.Project.ProjectsListModel

@using  BugTracker.Models.ServiceModels.Project


@if (Model.Projects.Count == 0)
{
    <div class="jumbotron">
        <h1 class="display-4">The are no projects</h1>
        <hr class="my-4">
        <p>If you want to proceed please add one</p>
        <a asp-controller="Project" asp-action="Add" asp-route-organizationId="@Model.OrganizatioId" asp-route-departmentId="@Model.DepartmentId" class="btn btn-secondary btn-lg" role="button">Add project</a>
    </div>
}
else
{

    @for (int i = 0; i < Model.Projects.Count; i++)
    {
        var projects = Model.Projects[i];


        <div class="accordion mb-3 mt-3" id="accordionExample">

            <div class="accordion-item">
                <h2 class="accordion-header" id="heading@(+i)">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(+i)" aria-expanded="true" aria-controls="collapse@(+i)">
                        <b>@(i+1).</b>@projects.Name
                    </button>
                </h2>
                <div id="collapse@(+i)" class="accordion-collapse collapse" aria-labelledby="heading@(+i)" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <a class="btn btn-secondary" asp-area="" asp-controller="Bug" asp-route-projectId="@projects.Id" asp-action="AllByProject">Information</a>
                        <a class="btn btn-secondary" asp-area="" asp-controller="Employee" asp-route-projectId="@projects.Id" asp-action="AllByProject">Employees</a>
                    </div>
                </div>
            </div>
        </div>

    }
    
}