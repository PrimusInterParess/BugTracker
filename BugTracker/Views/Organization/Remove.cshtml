@model List<OrganizationServiceModel>

@{
    ViewData["Title"] = "Remove";
}



    @if (Model.Count == 0)
    {
        <div class="jumbotron">
            <h1 class="display-4">The are not organization</h1>
            <hr class="my-4">
            <p>There are no organizations to remove. If you want add one instead ?</p>
            <a asp-controller="Organization" asp-action="Add" class="btn btn-secondary btn-lg" role="button">Add organization</a>
        </div>
    }
    else
    {
        <form method="post">


        @for (int i = 0; i < Model.Count; i++)
        {
            var organizationServiceModel = Model[i];


            <div class="accordion mb-3 mt-3" id="accordionExample">
            <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading@(+i)">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(+i)" aria-expanded="true" aria-controls="collapse@(+i)">
                            <b>@(i + 1).</b>@organizationServiceModel.Name
                        </button>
                    </h2>

                    <div id="collapse@(+i)" class="accordion-collapse collapse" aria-labelledby="heading@(+i)" data-bs-parent="#accordionExample">

                        <div class="accordion-body text-center">
                            <li>
                                Number of<b> Departments</b> - @organizationServiceModel.Departments.Count
                            </li>
                            <li>
                                Number of<b> Employees</b> - @organizationServiceModel.Employees.Count
                            </li>
                            <li>
                                Number of<b> Projects</b> - @organizationServiceModel.Projects.Count
                            </li>

                            <b>Are you sure that you want to erase all the data ?</b>
                            <a class="btn btn-danger" asp-controller="Organization" asp-route-organizationId="@organizationServiceModel.Id" asp-action="Delete">Remove</a>
                            </div>

                    </div>
                </div>

            </div>

        }
        </form>


    }
