@model AddBugFormModel

@{
    ViewData["Title"] = "Add Bug";
}

<div class="container">
    <div class="row">
        <div class="offset-sm-2  col-lg-8 col-sm-12 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center">Add Bug</h2>
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title here" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="Description"  class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter description here"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="StatusId"></label>
                    <select asp-for="StatusId" class="form-control">
                        <option value="none">none</option>
                        @foreach (var status in Model.StatusList)
                        {
                            <option value="@status.Id">@status.Name</option>
                        }
                    </select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="PriorityId"></label>
                    <select asp-for="PriorityId" class="form-control">
                        <option value="none">none</option>
                        @foreach (var priority in Model.Priorities)
                        {
                            <option value="@priority.Id">@priority.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PriorityId" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="AppearedOn" class="control-label"></label>
                    <input asp-for="AppearedOn" class="form-control" asp-format="{0:dd-MM-YYYYHH:mm}" />
                    <span asp-validation-for="AppearedOn" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="DueDate" class="control-label"></label>
                    <input asp-for="DueDate" class="form-control" asp-format="{0:dd-MM-YYYYHH:mm}" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Project" class="control-label"></label>
                    <input asp-for="Project" class="form-control" placeholder="Enter project name here.." />
                    <span asp-validation-for="Project" class="text-danger"></span>
                </div>
                <div>
                    <div class="mt-3">
                        <input type="submit" value="Add" class="btn btn-primary" />
                    </div>
                </div>
                @*  <div>
                    <a asp-action="Index">Back to List</a>
                    </div>*@
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
